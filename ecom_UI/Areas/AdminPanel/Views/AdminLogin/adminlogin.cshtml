
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>adminlogin</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/prettyPhoto.css" rel="stylesheet" />
    <link href="~/Content/price-range.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/main.css" rel="stylesheet">
    <link href="~/Content/responsive.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body style="background:gray;">
    <section id="form" class="mb-3">
        <!--form-->
        <div class="container">
            <div class="row">
                <div class="col-md-5 offset-4">
                    <div class="card">
                        <div class="card-body">

                            <div class="login-form">
                                <!--login form-->
                                <div class="row">

                                    <div class="col-sm-12 text-center">
                                        <i class="fa fa-user-circle-o fa-5x "></i>
                                        <br /> <br />
                                        <h4 class="title text-center" style="color: #FE980F;"> <b>ADMIN LOGIN</b></h4>

                                    </div>
                                </div>
                                <br />
                                <form>
                                    <div class="form-group">
                                        <input type="text" name="username" placeholder="Username" />
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password" placeholder="Password" />
                                    </div>
                                    <div class="form-group">
                                        @Html.DropDownList("role", @ViewBag.userrole as SelectList, "Select", new { @class = "form-control" })
                                    </div>

                                    <label>
                                        <span>
                                            <input type="checkbox" class="checkbox">
                                            Show Password
                                        </span>
                                    </label>
                                    <button type="submit" class="btn btn-default btn-block">Login</button>
                                </form>
                            </div><!--/login form-->

                        </div>
                    </div>
                </div>
              
          
            </div>
        </div>
    </section><!--/form-->
</body>
</html>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script type="text/javascript">
    $(document).ready(function () {
        $("form").on("submit", function (e) {
            e.preventDefault();
            var data = $("form").serializeArray();
            console.log(data)
            var formdata = new FormData();
            formdata.append("userchk.user.user_name", data[0].value)
            formdata.append("userchk.user.password", data[1].value)
            formdata.append("userchk.user_role.role_id", data[2].value)
            $.ajax({
                type: "POST",
                url: "/AdminPanel/AdminLogin/userchk",
                data: formdata,
                contentType: false,
                processData: false,
                success: function (data)
                {
                    if (data == false) {
                    }
                    else
                    {
                        window.location.href = "/AdminPanel/Product/Create_Product";
                    }
                  
                     
                  
                }

            })

        })



    })
</script>
