@{
    ViewBag.Title = "Role List";
}
<br />
<link href="~/Content/font-awesome.min.css" rel="stylesheet" />
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Role List</h5>
                    <br />
                    <hr />
                    <table class="table table-sm text-center table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Role ID</th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody id="rolelist">
                        </tbody>
                    </table>
                    <div class="modal fade" tabindex="-1" role="dialog" id="roleeditmodel">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Role Edit</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    @Html.TextBox(" ", " ", new { @class = "form-control", id = "editroletxt" })
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-primary" id="roleupdatebtn" data-dismiss="modal">Save changes</button>
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/custom.js"></script>